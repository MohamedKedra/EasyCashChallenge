<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.easycashchallenge.ui.main.ui.MainFragment"
        tools:layout="@layout/main_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_CompetitionFragment"
            app:destination="@id/CompetitionFragment" />
    </fragment>

    <fragment
        android:id="@+id/CompetitionFragment"
        android:name="com.example.easycashchallenge.ui.compitition.CompititionFragment"
        tools:layout="@layout/compitition_fragment">

        <action
            android:id="@+id/action_CompetitionFragment_to_TeamFragment"
            app:destination="@id/TeamFragment" />
    </fragment>

    <fragment
        android:id="@+id/TeamFragment"
        android:name="com.example.easycashchallenge.ui.team.TeamFragment"
        tools:layout="@layout/team_fragment" />

</navigation>